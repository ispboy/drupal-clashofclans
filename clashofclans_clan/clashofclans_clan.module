/**
 * Prepares variables for clan templates.
 *
 * Default template: clashofclans-clan.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the clan information and any
 *     fields attached to the entity.
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_clashofclans_clan(array &$variables) {
  foreach (Element::children($variables['elements']) as $key) {
    if ($key == 'extra_field_clashofclans_clan_live_data' && isset($variables['elements'][$key]['content'])) {
      // $weight = $variables['elements'][$key]['#weight'];
      $extra_field = $variables['elements'][$key]['content'];
      $sub_keys = array_keys($extra_field);
      foreach ($sub_keys as $val) {
        $sub_key = ltrim($val, '#');
        $variables[$sub_key] = $extra_field[$val];
      }
      unset($variables['elements'][$key]);
    } else {
      $variables['content'][$key] = $variables['elements'][$key];
    }
  }

  // if (isset($variables['member_list']) && isset($variables['data']['members'])) {
