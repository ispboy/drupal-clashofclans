{# [module]/templates/clashofclans-clan-info.html.twig #}
{{ attach_library('core/drupal.ajax') }}
<article>
<div style="float: right">
  <img src="{{ clan.badgeUrls.medium }}" />
  <br />
  Points: {{ clan.clanPoints }}
  <br />
  VersusPoints: {{ clan.clanVersusPoints }}
  <div>Location: {{ location }}</div>
  <div>Language: {{ clan.chatLanguage.name }}</div>
</div>
<p>{{ clan.description}}</p>
<div class="clashofclans-labels">
{% for label in clan.labels %}
  <img title="{{ label.name }}" src="{{ label.iconUrls.small }}" width="64" height="64" />
{% endfor %}
</div>
<div>Tag: {{ clan.tag}}</div>
<div>Type: {{ clan.type}}</div>
<div>requiredTrophies: {{ clan.requiredTrophies}}</div>
<div>requiredTownhallLevel: {{ clan.requiredTownhallLevel}}</div>
<div>requiredVersusTrophies: {{ clan.requiredVersusTrophies}}</div>
<div>warFrequency: {{ clan.warFrequency}}</div>
<div>warWinStreak: {{ clan.warWinStreak}}</div>
<div>warWins: {{ clan.warWins}}</div>
<div>warTies: {{ clan.warTies}}</div>
<div>warLosses: {{ clan.warLosses}}</div>
<div>isWarLogPublic: {{ clan.isWarLogPublic}} {{ current_war}} {{ league_group}}</div>
<div>warLeague: {{ clan.warLeague.name}}</div>
<div>members: {{ clan.members}} </div>
<div>memberlist: &gt;&gt; <a class="use-ajax" href="{{ url('<front>') }}clashofclans-clan/tag/{{ clan.tag|url_encode }}/memberlist/nojs">The best rank.</a></div>
</article>

<div class='member-list'>{{ member_list }}</div>
